<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="95dp"
        android:layout_marginTop="746dp"
        android:layout_marginBottom="1dp"
        android:background="#6454a4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:background="@drawable/nav_board_chosen"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Pomodoro\nTimer"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:padding="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="@drawable/nav_board_real"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toKanban"
                android:layout_width="96dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:text="Kanban\nBoard"
                android:textSize="18dp"
                app:cornerRadius="0dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="@drawable/nav_board_real"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toReminders"
                android:layout_width="96dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:text="Reminders"
                android:textSize="18dp"
                app:cornerRadius="0dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"/> />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="@drawable/nav_board_real"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toMotivation"
                android:layout_width="96dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:text="Motivation"
                android:textSize="18dp"
                app:cornerRadius="0dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"/> />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/breakTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break Time!"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/breakTimerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/breakTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/startNewPomodoroButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Pomodoro"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/breakTimerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>